---
import Background from "./Background.astro";
import Container from "./Container.astro";
---

<Background
  extraCss={`bg-black min-h-[0vh] md:min-h-[20vh]`}
  pattern="pattern.svg"
>
  <Container width={"wide"}>
    <div class:list={[`grid grid-cols-1 md:grid-flow-row`]}>
      <div
        class:list={[
          `md:place-self-center m-5 md:m-0 md:ml-10 md:pt-10 md:pb-10`,
        ]}
      >
        <h1
          class:list={[
            `text-black bg-white p-2 font-bold text-4xl inline-block mb-2 md:mb-0`,
          ]}
        >
          I'm Jerred Shepherd
        </h1>
        <br />
        <h2
          class:list={[
            `text-black bg-white p-2 font-bold text-4xl inline-block`,
          ]}
        >
          I'm a <span>software engineer</span> at{" "}
          <a
            href="https://posit.co/"
            class:list={[`underline hover:no-underline`]}
          >
            Posit, PBC
          </a>
        </h2>
      </div>
    </div>
  </Container>
</Background>
