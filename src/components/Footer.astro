---
import { Icon } from "astro-icon";
import Container from "./Container.astro";
---

<div class:list={[`w-full bg-black text-white p-5 text-center`]}>
  <Container width="normal">
    <div class="flex flex-col md:flex-row md:justify-between gap-10">
      <div>
        Live in Seattle? <a
          href="mailto:coffee@sjer.red"
          class="underline hover:no-underline hover:bg-white hover:text-black">Let's grab coffee</a
        >!
      </div>
      <div class="flex flex-wrap gap-4 md:justify-end content-center place-content-center">
        <a href="https://github.com/shepherdjerred" class="hover:bg-white hover:text-black p-1"
          ><Icon pack="mdi" name="github" /> <span class="underline">github</span></a
        >
        <a rel="me" href="https://mastodon.social/@shepherdjerred" class="hover:bg-white hover:text-black p-1"
          ><Icon pack="mdi" name="mastodon" /> <span class="underline">mastodon</span></a
        >
        <a href="/rss.xml" class="hover:bg-white hover:text-black p-1"
          ><Icon pack="mdi" name="rss" /> <span class="underline">rss</span></a
        >
        <a href="mailto:contact@sjer.red" class="hover:bg-white hover:text-black p-1">
          <Icon pack="mdi" name="email" />
          <span class="underline">email</span>
        </a>
      </div>
    </div>
  </Container>

  <style lang="css">
    [astro-icon] {
      width: 24px;
      display: inline;
    }
  </style>
</div>
