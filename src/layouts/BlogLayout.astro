---
import NavbarLayout from "@layouts/NavbarLayout.astro";
import { BlogSchema } from "src/content/schemas/blog";
import BlogWebring from "@components/BlogWebring.astro";
import BlogContent from "@components/BlogContent.astro";

const props = BlogSchema.parse({
  // eslint-disable-next-line @typescript-eslint/no-unsafe-member-access -- this is safe enough
  ...Astro.props.frontmatter,
  ...Astro.props,
});
---

<NavbarLayout title={props.title} description={props.description} openGraphType="article">
  <BlogContent {...props}>
    <slot />
  </BlogContent>
  <BlogWebring />
</NavbarLayout>
