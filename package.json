{
  "name": "sjer.red",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "lint": "eslint . --ext .js,.jsx,ts,tsx,astro && prettier --check . && stylelint ./src/**/*.{css,sass,scss} && markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:fix": "eslint . --ext .js,.jsx,ts,tsx,astro --fix && prettier -w . && stylelint --fix ./src/**/*.{css,sass,scss} && markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/mdx": "^2.3.1",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.1.4",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/ibm-plex-serif": "^5.0.13",
    "@fontsource/nunito": "^5.0.18",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/typography": "^0.5.13",
    "@types/jsdom": "^21.1.6",
    "astro": "^4.7.1",
    "astro-icon": "^1.1.0",
    "jsdom": "^24.0.0",
    "markdown-it": "^14.1.0",
    "remark-toc": "^9.0.0",
    "remeda": "^1.61.0",
    "sanitize-html": "^2.13.0",
    "sass": "^1.76.0",
    "satori": "^0.10.13",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.1.66",
    "@playwright/test": "^1.43.1",
    "@types/markdown-it": "^14.0.1",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^1.0.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.13.0",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "stylelint": "^16.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write",
    "*.md": "markdownlint-cli2 --fix",
    "*.{css,sass,scss}": "stylelint --fix"
  }
}
