{
  "name": "sjer.red",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "lint": "eslint . --ext .js,.jsx,ts,tsx,astro && prettier --check . && markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:fix": "eslint . --ext .js,.jsx,ts,tsx,astro --fix && prettier -w . && markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/mdx": "^3.0.1",
    "@astrojs/rss": "^4.0.6",
    "@astrojs/sitemap": "^3.1.5",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/ibm-plex-serif": "^5.0.13",
    "@fontsource/nunito": "^5.0.18",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/jsdom": "^21.1.6",
    "astro": "^4.9.2",
    "astro-icon": "^1.1.0",
    "jsdom": "^24.1.0",
    "markdown-it": "^14.1.0",
    "remark-toc": "^9.0.0",
    "remeda": "^1.61.0",
    "sass": "^1.77.2",
    "satori": "^0.10.13",
    "tailwindcss": "^3.4.3",
    "ts-pattern": "^5.1.2",
    "webring": "^0.0.2"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.1.66",
    "@playwright/test": "^1.44.1",
    "@types/markdown-it": "^14.1.1",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^9.4.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "markdownlint-cli2": "^0.13.0",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.0",
    "prettier-plugin-astro": "^0.14.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write",
    "*.md": "markdownlint-cli2 --fix"
  }
}
