{
  "name": "shepherdjerred.com",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "lint": "eslint . --ext .js,.jsx,ts,tsx,astro && prettier --check . && stylelint ./src/**/*.{css,sass,scss} && markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:fix": "eslint . --ext .js,.jsx,ts,tsx,astro --fix && prettier -w . && stylelint --fix ./src/**/*.{css,sass,scss} && markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.0",
    "@astrojs/mdx": "^1.1.3",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.1",
    "@astrojs/tailwind": "^5.0.1",
    "@fontsource/ibm-plex-serif": "^5.0.8",
    "@fontsource/nunito": "^5.0.15",
    "@resvg/resvg-js": "^2.4.1",
    "@tailwindcss/typography": "^0.5.10",
    "astro": "^3.4.0",
    "astro-icon": "^0.8.1",
    "markdown-it": "^13.0.2",
    "remark-toc": "^9.0.0",
    "sanitize-html": "^2.11.0",
    "sass": "^1.69.5",
    "satori": "^0.10.9",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@dagger.io/dagger": "^0.8.7",
    "@playwright/test": "^1.39.0",
    "@types/markdown-it": "^13.0.2",
    "@types/sanitize-html": "^2.9.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.51.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "markdownlint-cli2": "^0.10.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write",
    "*.md": "markdownlint-cli2-fix",
    "*.{css,sass,scss}": "stylelint --fix"
  }
}
